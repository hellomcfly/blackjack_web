<h2>Remember <%= session[:name]%>, the House always wins.</h2>
<br>

<% if @game_over == true %>
	<div class="well well-small" id="mine">
	<h3><u>Dealer's cards:</u></h3>
	<h4><% session[:dealer_cards].each do |card| %>
		<%= card_image(card) %>
	<% end %></h4>
	<p>Dealer's hand value: <strong><%= @dealer_total %>. </strong></p>
	</div>
	<br>
	<div class="well well-small" id="mine">
	<h3><u>Your cards:</u><h3>
	<h4><% session[:player_cards].each do |card| %>
		<%= card_image(card) %>
	<% end %></h4>
	<p>Your hand value: <strong><%= @player_total %></strong>
	</p>
	</div>
	<div class="well well-small" id="mine">
	<p>Would you like to play again? You now have <u>$<%=session[:money]%></u> remaining.</p>

	<form action = '/blackjack/play_again' method = 'post' >
		<input class = "btn btn-success btn-large" type = "submit" value = "Yes" name='play_again'>
		<input class = "btn btn-danger btn-large" type = "submit" value = "No" name='play_again'/>
	</div>

<% else %>
	<div class="well well-small" id="mine" >
	<h3><u>Dealer's cards:</u></h3>
	<h4><img src='/images/cards/cover.jpg' class='img-polaroid' height='120' width='84'/>
		<%= card_image(session[:dealer_cards][0])%></h4>
	</div>
	<br>
	<div class="well well-small" id="mine">
	<h3><u>Your cards:</u><h3>
	<h4><% session[:player_cards].each do |card| %>
		<%= card_image(card) %>
	<% end %></h4>
	<p>Your hand value: <strong><%= @player_total %></strong></p> 
	</div>
	<br>
	<div class="well well-small" id="mine">
	<p>Money left: <u>$<%=session[:money]%></u><br>
	Current wager: <u>$<%=session[:bet]%></u></p>
	Would you like to hit or stand?</p>
	<form action = '/blackjack/hit_or_stand' method = 'post' >
		<input class = "btn btn-success btn-large" type = "submit" value = "Hit" name='choice' />
		<input class = "btn btn-danger btn-large" type = "submit" value = "Stand" name='choice'/>
	</div>
<% end %>



